<!-- contact-area start -->
<div class="contact-area ptb-60">
    <div class="container">
        <div class="row">
            <!-- contact-info start -->
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="contact-info">
                    <h3>Thông Tin Liên Hệ</h3>
                    <ul>
                        <li>
                            <i class="fa fa-map-marker"></i> <strong>Địa Chỉ</strong>
                           Nguyễn Văn Cừ nối dài - An Bình - Ninh Kiều - Cần Thơ
                        </li>
                        <li>
                            <i class="fa fa-mobile"></i> <strong>Số Điện Thoại</strong>
                            0947.452.491
                        </li>
                        <li>
                            <i class="fa fa-envelope"></i> <strong>Email</strong>
                            <a href="mailto:chauhuudang1702@gmail.com">chauhuudang1702@gmail.com</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- contact-info end -->
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="contact-form">
                    <h3><i class="fa fa-envelope-o"></i> Gửi Tin Nhắn Liên Hệ</h3>
                    <div class="row">
                        <form method="post" id="FromContact">
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input name="name" id="name" type="text" placeholder="Full Name " />
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input name="email" id="email" type="email" placeholder="Email " />
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input name="phone" id="phone" type="text" placeholder="Phone" />
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <textarea name="message" id="message" cols="30" rows="10" placeholder="Message"></textarea>
                                <button type="submit" id="btnSend" style="background-color:#ffae00;border:none;padding:10px;color:black;width:100px;margin-top:10px;margin-left:200px" ;>Gửi</button>

                            </div>
                        </form>
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- contact-area end -->
